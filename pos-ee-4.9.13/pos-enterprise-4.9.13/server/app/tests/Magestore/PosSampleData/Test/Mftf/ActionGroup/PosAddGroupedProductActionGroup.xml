<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="PosAddGroupedProductActionGroup">
        <arguments>
            <argument name="dataProduct" defaultValue="stable_order_grouped_product"/>
        </arguments>
        <fillField stepKey="fillGroupedProductSearchBox" selector="{{ProductListSection.searchBox}}" userInput="{{dataProduct.sku}}"/>
        <wait time="2" stepKey="waitForSearchingGroupedProduct"/>
        <waitForElementVisible time="30" selector="{{ProductListSection.firstProduct}}" stepKey="seeAtLeaseOneGroupedProductAfterSearch"/>
        <click stepKey="clickOnGroupedProductFoundInList" selector="{{ProductListSection.firstProduct}}"/>
        <waitForElementVisible selector="{{PosGroupedProductPopup.product1plus}}" time="30" stepKey="waitGroupedProductPopup"/>
        <conditionalClick selector="{{PosGroupedProductPopup.product1plus}}" dependentSelector="{{PosGroupedProductPopup.product1plus}}" visible="true" stepKey="clickIncreaseOption1"/>
        <conditionalClick selector="{{PosGroupedProductPopup.product2plus}}" dependentSelector="{{PosGroupedProductPopup.product2plus}}" visible="true" stepKey="clickIncreaseOption2"/>
        <conditionalClick selector="{{PosGroupedProductPopup.product3plus}}" dependentSelector="{{PosGroupedProductPopup.product3plus}}" visible="true" stepKey="clickIncreaseOption3"/>
        <conditionalClick selector="{{PosGroupedProductPopup.product4plus}}" dependentSelector="{{PosGroupedProductPopup.product4plus}}" visible="true" stepKey="clickIncreaseOption4"/>
        <click selector="{{PosGroupedProductPopup.addToCart}}" stepKey="addGroupedProductToCart"/>
        <waitForElementVisible selector="{{CartSection.productFoundOnCartByName(dataProduct.name)}}" time="30" stepKey="waitGroupedProductIsAddedToCartSuccessfully"/>
    </actionGroup>
</actionGroups>
