<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="after.body.start">
            <block class="Laconica\Analytics\Block\Html\Gtm" name="gtm_body_script"
                   template="Laconica_Analytics::html/body/gtm.phtml"/>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Laconica\Analytics\Block\Html\Data" name="gtm_data_push" cacheable="false"
                   template="Laconica_Analytics::html/body/push.phtml"/>
            <block class="Laconica\Analytics\Block\Html\Ecommerce" name="gtm_ecommerce_push" cacheable="false"
                   template="Laconica_Analytics::html/body/push.phtml"/>
        </referenceContainer>
    </body>
</page>
