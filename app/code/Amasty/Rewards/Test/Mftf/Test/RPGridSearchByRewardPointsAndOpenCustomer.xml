<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="RPGridSearchByRewardPointsAndOpenCustomer">
        <annotations>
            <features value="Customer Grid Reward Points"/>
            <stories value="Customer Grid Reward Points via Customer"/>
            <title value="Check Search by Reward Points in Customer Grid"/>
            <description value="Check Search Customer by Reward Points in Customer Grid and Open Customer"/>
            <severity value="CRITICAL"/>
            <testCaseId value="RP-MFTF-65"/>
            <group value="Amasty"/>
            <group value="Rewards"/>
            <group value="RewardsGrid"/>
        </annotations>

        <before>
            <!-- Create Data for Test, Login to Admin Area and Configuration Settings-->
            <createData entity="RewardPointsCustomer" stepKey="createCustomerOne"/>
            <createData entity="RewardPointsCustomer" stepKey="createCustomerTwo"/>
            <createData entity="RewardPointsCustomer" stepKey="createCustomerThree"/>
            <createData entity="AddNineteenRewardPointsNotExpire" stepKey="addRewardPointsToFirstCustomer">
                <requiredEntity createDataKey="createCustomerOne"/>
            </createData>
            <createData entity="AddRewardPointsExpireFourDays5" stepKey="addRewardPointsToSecondCustomer">
                <requiredEntity createDataKey="createCustomerTwo"/>
            </createData>
            <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminConfigurationSettingRewardsGeneral" stepKey="DefaultConfigurationGeneralSettingRewards">
                <argument name="adminSettingRewardsGeneral" value="defaultGeneralSettingRewards"/>
            </actionGroup>
        </before>

        <after>
            <!-- Delete Created Data After Test -->
            <deleteData createDataKey="createCustomerOne" stepKey="deleteCustomerOne"/>
            <deleteData createDataKey="createCustomerTwo" stepKey="deleteCustomerTwo"/>
            <deleteData createDataKey="createCustomerThree" stepKey="deleteCustomerThree"/>
            <actionGroup ref="logout" stepKey="logout"/>
        </after>

        <!-- Search Customers With Points From 15 and Checking Find Customer-->
        <actionGroup ref="AdminSearchCustomerByRewardPointsOnlyFrom" stepKey="SearchCustomerFrom">
            <argument name="pointsFrom" value="SearchCustomerByRewardPointsInCustomerGrid.amountFromFifteen"/>
        </actionGroup>
        <actionGroup ref="AdminOpenCustomerAfterSearch" stepKey="OpenFindCustomerOne"/>
        <actionGroup ref="AdminAssertCustomerAccountInformation" stepKey="checkInformationFirstCustomer">
            <argument name="firstName" value="$$createCustomerOne.firstname$$"/>
            <argument name="lastName" value="$$createCustomerOne.lastname$$"/>
            <argument name="email" value="$$createCustomerOne.email$$"/>
        </actionGroup>
        <!-- Search Customers With Points To 4 and Checking Find Customer-->
        <actionGroup ref="AdminSearchCustomerByRewardPointsOnlyTo" stepKey="SearchCustomerTo">
            <argument name="pointsTo" value="SearchCustomerByRewardPointsInCustomerGrid.amountToFour"/>
        </actionGroup>
        <actionGroup ref="AdminCheckRewardPointsByCustomerGrid" stepKey="AssertRewardPointsByCustomerThree">
            <argument name="customerEmail" value="$$createCustomerThree.email$$"/>
            <argument name="countPoints" value="{{CheckRewardPointsByCustomerGrid.amountCustomerPointsNull}}"/>
        </actionGroup>
        <!-- Search Customers With Points From 4 To 7 and Checking Find Customer-->
        <actionGroup ref="AdminSearchCustomerByRewardPoints" stepKey="SearchCustomerFromAndTo">
            <argument name="pointsFrom" value="SearchCustomerByRewardPointsInCustomerGrid.amountFromFour"/>
            <argument name="pointsTo" value="SearchCustomerByRewardPointsInCustomerGrid.amountToSeven"/>
        </actionGroup>
        <actionGroup ref="AdminOpenCustomerAfterSearch" stepKey="OpenFindCustomerTwo"/>
        <actionGroup ref="AdminAssertCustomerAccountInformation" stepKey="checkInformationSecondCustomer">
            <argument name="firstName" value="$$createCustomerTwo.firstname$$"/>
            <argument name="lastName" value="$$createCustomerTwo.lastname$$"/>
            <argument name="email" value="$$createCustomerTwo.email$$"/>
        </actionGroup>
        <actionGroup ref="AdminClearFiltersOnCustomersGrid" stepKey="clearFiltersByCustomerGridAfterTest"/>
    </test>
</tests>
