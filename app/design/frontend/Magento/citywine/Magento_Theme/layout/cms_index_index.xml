<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <block class="Magento\Cms\Block\Block" name="top.slider">
            <arguments>
                <argument name="block_id" xsi:type="string">top-slider</argument>
            </arguments>
        </block>
        <block class="Magento\Cms\Block\Block" name="category.list">
            <arguments>
                <argument name="block_id" xsi:type="string">category-list</argument>
            </arguments>
        </block>

        <referenceBlock name="page.main.title" remove="true" />
        <move element="top.slider" destination="header.container"/>
        <move element="category.list" destination="content"/>

    </body>
</page>


